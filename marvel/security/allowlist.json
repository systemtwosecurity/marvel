{
  "rules": [
    { "id": "allow-git-status", "type": "prefix", "pattern": "git status", "reason": "Read-only git operation" },
    { "id": "allow-git-diff", "type": "prefix", "pattern": "git diff", "reason": "Read-only git operation" },
    { "id": "allow-git-log", "type": "prefix", "pattern": "git log", "reason": "Read-only git operation" },
    { "id": "allow-git-branch", "type": "prefix", "pattern": "git branch", "reason": "Read-only git operation" },
    { "id": "allow-git-show", "type": "prefix", "pattern": "git show", "reason": "Read-only git operation" },
    { "id": "allow-git-commit", "type": "prefix", "pattern": "git commit", "reason": "Safe git operation - commits staged changes" },
    { "id": "allow-git-stash", "type": "prefix", "pattern": "git stash", "reason": "Safe git operation - stash changes" },
    { "id": "allow-git-checkout", "type": "prefix", "pattern": "git checkout", "reason": "Git checkout operation" },
    { "id": "allow-git-switch", "type": "prefix", "pattern": "git switch", "reason": "Git switch branch operation" },
    { "id": "allow-git-merge", "type": "prefix", "pattern": "git merge", "reason": "Git merge operation" },
    { "id": "allow-git-fetch", "type": "prefix", "pattern": "git fetch", "reason": "Read-only git operation - fetches from remote" },
    { "id": "allow-git-pull", "type": "prefix", "pattern": "git pull", "reason": "Git pull operation" },
    { "id": "allow-git-push-safe", "type": "regex", "pattern": "^git\\s+push(?!.*--force)(?!.*-f\\b)", "reason": "Safe git push (no force)" },
    { "id": "allow-git-add", "type": "prefix", "pattern": "git add", "reason": "Git add to staging" },
    { "id": "allow-git-remote", "type": "prefix", "pattern": "git remote", "reason": "Git remote management" },
    { "id": "allow-git-config-read", "type": "regex", "pattern": "^git\\s+config\\s+(?!--global|--system)[\\w.-]+$", "reason": "Read git config value" },
    { "id": "allow-git-config-local", "type": "regex", "pattern": "^git\\s+config\\s+--local\\b", "reason": "Local git config operation" },
    { "id": "allow-git-ls-files", "type": "prefix", "pattern": "git ls-files", "reason": "Read-only git operation" },
    { "id": "allow-git-rev-parse", "type": "prefix", "pattern": "git rev-parse", "reason": "Read-only git operation" },
    { "id": "allow-git-worktree", "type": "prefix", "pattern": "git worktree", "reason": "Git worktree management" },
    { "id": "allow-git-describe", "type": "prefix", "pattern": "git describe", "reason": "Read-only git operation" },
    { "id": "allow-git-tag-read", "type": "regex", "pattern": "^git\\s+tag(?:\\s+-l|\\s*$)", "reason": "Read-only git tag listing" },
    { "id": "allow-git-rebase", "type": "prefix", "pattern": "git rebase", "reason": "Git rebase operation" },
    { "id": "allow-git-cherry-pick", "type": "prefix", "pattern": "git cherry-pick", "reason": "Git cherry-pick operation" },

    { "id": "allow-pnpm-safe", "type": "regex", "pattern": "^pnpm\\s+(install|dev|build|lint|test|run|typecheck)\\b", "reason": "Safe pnpm dev operations" },
    { "id": "allow-pnpm-exec", "type": "prefix", "pattern": "pnpm exec", "reason": "Execute package binary via pnpm" },
    { "id": "allow-pnpm-dlx", "type": "prefix", "pattern": "pnpm dlx", "reason": "Execute remote package via pnpm" },
    { "id": "allow-pnpm-add", "type": "prefix", "pattern": "pnpm add", "reason": "Add dependency via pnpm" },
    { "id": "allow-pnpm-remove", "type": "prefix", "pattern": "pnpm remove", "reason": "Remove dependency via pnpm" },
    { "id": "allow-pnpm-list", "type": "prefix", "pattern": "pnpm list", "reason": "List dependencies" },
    { "id": "allow-pnpm-outdated", "type": "prefix", "pattern": "pnpm outdated", "reason": "Check for outdated dependencies" },
    { "id": "allow-pnpm-why", "type": "prefix", "pattern": "pnpm why", "reason": "Show dependency tree" },
    { "id": "allow-pnpm-tsx", "type": "prefix", "pattern": "pnpm tsx", "reason": "Run TypeScript with tsx" },
    { "id": "allow-pnpm-vitest", "type": "prefix", "pattern": "pnpm vitest", "reason": "Run vitest tests" },

    { "id": "allow-npm-safe", "type": "regex", "pattern": "^npm\\s+(run|test|start)\\b", "reason": "Safe npm dev operations" },

    { "id": "allow-gh-auth-status", "type": "prefix", "pattern": "gh auth status", "reason": "Check GitHub auth status" },
    { "id": "allow-gh-repo-view", "type": "prefix", "pattern": "gh repo view", "reason": "View GitHub repo info" },
    { "id": "allow-gh-pr-view", "type": "prefix", "pattern": "gh pr view", "reason": "View pull request" },
    { "id": "allow-gh-pr-list", "type": "prefix", "pattern": "gh pr list", "reason": "List pull requests" },
    { "id": "allow-gh-pr-create", "type": "prefix", "pattern": "gh pr create", "reason": "Create pull request" },
    { "id": "allow-gh-pr-merge", "type": "prefix", "pattern": "gh pr merge", "reason": "Merge pull request" },
    { "id": "allow-gh-pr-status", "type": "prefix", "pattern": "gh pr status", "reason": "Check PR status" },
    { "id": "allow-gh-pr-checks", "type": "prefix", "pattern": "gh pr checks", "reason": "View PR checks" },
    { "id": "allow-gh-issue-view", "type": "prefix", "pattern": "gh issue view", "reason": "View issue" },
    { "id": "allow-gh-issue-list", "type": "prefix", "pattern": "gh issue list", "reason": "List issues" },
    { "id": "allow-gh-api", "type": "prefix", "pattern": "gh api", "reason": "GitHub API operations" },

    { "id": "allow-ls", "type": "prefix", "pattern": "ls", "reason": "Read-only directory listing" },
    { "id": "allow-pwd", "type": "prefix", "pattern": "pwd", "reason": "Print working directory" },
    { "id": "allow-echo", "type": "prefix", "pattern": "echo ", "reason": "Print to stdout" },
    { "id": "allow-which", "type": "prefix", "pattern": "which ", "reason": "Locate command" },
    { "id": "allow-cat", "type": "prefix", "pattern": "cat ", "reason": "Read file contents" },
    { "id": "allow-head", "type": "prefix", "pattern": "head ", "reason": "Read file head" },
    { "id": "allow-tail", "type": "prefix", "pattern": "tail ", "reason": "Read file tail" },
    { "id": "allow-wc", "type": "prefix", "pattern": "wc ", "reason": "Word count" },
    { "id": "allow-tree", "type": "prefix", "pattern": "tree ", "reason": "Directory tree view" },
    { "id": "allow-tree-cwd", "type": "regex", "pattern": "^tree$", "reason": "Directory tree view (current dir)" },
    { "id": "allow-find", "type": "prefix", "pattern": "find ", "reason": "Find files" },
    { "id": "allow-grep", "type": "prefix", "pattern": "grep ", "reason": "Search file contents" },
    { "id": "allow-jq", "type": "prefix", "pattern": "jq ", "reason": "Parse JSON" },
    { "id": "allow-env", "type": "regex", "pattern": "^env(\\s|$)", "reason": "Show environment variables" },
    { "id": "allow-printenv", "type": "prefix", "pattern": "printenv", "reason": "Print environment" },
    { "id": "allow-diff", "type": "prefix", "pattern": "diff ", "reason": "Compare files" },
    { "id": "allow-file", "type": "prefix", "pattern": "file ", "reason": "Determine file type" },
    { "id": "allow-stat", "type": "prefix", "pattern": "stat ", "reason": "File statistics" },
    { "id": "allow-date", "type": "prefix", "pattern": "date", "reason": "Show current date/time" },
    { "id": "allow-uname", "type": "prefix", "pattern": "uname", "reason": "System information" },
    { "id": "allow-hostname", "type": "prefix", "pattern": "hostname", "reason": "Show hostname" },
    { "id": "allow-whoami", "type": "prefix", "pattern": "whoami", "reason": "Current user" },
    { "id": "allow-id", "type": "regex", "pattern": "^id(\\s|$)", "reason": "User/group IDs" },

    { "id": "allow-uv-run", "type": "prefix", "pattern": "uv run", "reason": "Run Python via uv" },
    { "id": "allow-uv-pip", "type": "prefix", "pattern": "uv pip", "reason": "Manage Python packages via uv" },
    { "id": "allow-uvx", "type": "prefix", "pattern": "uvx ", "reason": "Run Python CLI tools via uvx" },

    { "id": "allow-mkdir", "type": "prefix", "pattern": "mkdir ", "reason": "Create directory" },
    { "id": "allow-touch", "type": "prefix", "pattern": "touch ", "reason": "Create empty file or update timestamp" },
    { "id": "allow-cp", "type": "prefix", "pattern": "cp ", "reason": "Copy files" },
    { "id": "allow-mv", "type": "prefix", "pattern": "mv ", "reason": "Move/rename files" },

    { "id": "allow-time", "type": "prefix", "pattern": "time ", "reason": "Time command execution" },
    { "id": "allow-timeout", "type": "prefix", "pattern": "timeout ", "reason": "Run command with timeout" },

    { "id": "allow-claude-cli", "type": "prefix", "pattern": "claude ", "reason": "Claude CLI operations" },

    { "id": "allow-open", "type": "prefix", "pattern": "open ", "reason": "Open file/URL in default app" },

    { "id": "allow-docker-compose", "type": "prefix", "pattern": "docker compose", "reason": "Local dev services" },
    { "id": "allow-docker-info", "type": "prefix", "pattern": "docker info", "reason": "Check Docker daemon status" },
    { "id": "allow-docker-ps", "type": "prefix", "pattern": "docker ps", "reason": "List running containers" }
  ]
}
